<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
            fx:id="mainPanel" fx:controller="MainController"
            maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="480.0" prefWidth="720.0"
            stylesheets="stylesheet.css">
    <children>
        <HBox fx:id="fileListBox"
              alignment="CENTER" fillHeight="true"
              AnchorPane.topAnchor="2.0" AnchorPane.bottomAnchor="2.0"
              AnchorPane.leftAnchor="2.0" AnchorPane.rightAnchor="2.0">
            <VBox fx:id="fileListVBox" alignment="CENTER" fillWidth="true">
                <TextField fx:id="location" onKeyReleased="#onLocationKeyReleased" editable="true"
                           prefHeight="25.0" prefWidth="720.0"/>
                <ListView fx:id="list" onKeyReleased="#onListKeyReleased" editable="false"
                          prefHeight="480.0" prefWidth="720.0"/>
            </VBox>
        </HBox>
        <HBox fx:id="viewerBox" alignment="CENTER" fillHeight="true"
              AnchorPane.topAnchor="2.0" AnchorPane.bottomAnchor="2.0"
              AnchorPane.leftAnchor="2.0" AnchorPane.rightAnchor="2.0">
            <TextArea fx:id="viewer" onKeyReleased="#onViewerKeyReleased"
                      editable="false" wrapText="true" visible="false"
                      prefHeight="480.0" prefWidth="720.0"/>
        </HBox>
    </children>
</AnchorPane>
